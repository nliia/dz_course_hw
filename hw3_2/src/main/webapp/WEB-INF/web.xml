         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>FileSearcher</servlet-name>
        <servlet-class>dz_hw3.servlets.FileSearcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileSearcher</servlet-name>
        <url-pattern>/searcher</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TwoNumbersSum</servlet-name>
        <servlet-class>dz_hw3.servlets.TwoNumbersSum</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TwoNumbersSum</servlet-name>
        <url-pattern>/sumServlet</url-pattern>
    </servlet-mapping>
</web-app>